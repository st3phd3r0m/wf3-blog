{% extends 'base.html.twig' %}

{% block title %}Index des categories d'articles{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    
    <h1>Index des categories d'articles</h1>

    <a class="btn btn-success float-right m-5" href="{{ path('categories_new') }}">Ajouter une catégorie</a>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Noms des catégories</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    {# <a class="btn btn-primary" href="{{ path('categories_show', {'id': category.id}) }}">Voir</a> #}
                    <a class="btn btn-warning" href="{{ path('categories_edit', {'id': category.id}) }}">Modifier</a>
                    {{ include('categories/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
        {% endfor %}

            <div class="py-5">
            {{ knp_pagination_render(categories) }}
            </div>

        </tbody>
    </table>

    <div class="py-5">
    {{ knp_pagination_render(categories) }}
    </div>

    <a class="btn btn-success float-right m-5" href="{{ path('categories_new') }}">Ajouter une catégorie</a>
{% endblock %}
